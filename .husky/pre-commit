#!/bin/sh
. "$(dirname "$0")/_/husky.sh"  # Only needed for Husky

echo "🔍 Running type-check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type-check failed. Commit aborted."
  exit 1
fi

echo "🧹 Running lint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Commit aborted."
  exit 1
fi

echo "✅ All checks passed. Proceeding with commit."
